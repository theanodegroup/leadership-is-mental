<%= form_for @contact, remote: true,
             :html => { :class => "form-horizontal contact text-center" } do |f| %>

  <% contact_errors = @contact.errors.to_hash %>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.text_field :name, placeholder: 'Enter your name here', :class => 'form-control' %>
    </div>
    <% if contact_errors[:name] %>
      <div class='col-lg-9'>
        <% contact_errors[:name].each do |error| %>
          <p class='text-danger'>Name <%= error %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <%= f.text_field :email, placeholder: 'Enter your email here', :class => 'form-control' %>
    </div>

    <% if contact_errors[:email] %>
      <div class="col-lg-9">
        <% contact_errors[:email].each do |error| %>
          <p class='text-danger'>Email <%= error %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <br>

  <%= f.submit "SUBMIT", :class => 'btn btn-primary' %>
  <br>
  <%= link_to "Cancel", '', :class => 'btn btn-default close_newsletter_modal' %>

<% end %>
