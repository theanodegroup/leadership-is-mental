<%= form_for @contact, remote: true,
             :html => { :class => "form-horizontal contact text-center" } do |f| %>

  <% if @contact.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-10">
      <%= f.text_field :name, placeholder: 'Enter your name here', :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <div class="col-lg-10">
      <%= f.text_field :email, placeholder: 'Enter your email here', :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>

  <br>

  <%= f.submit "SUBMIT", :class => 'btn btn-primary' %>
  <br>
  <%= link_to "Cancel",
            '', :class => 'btn btn-default close_newsletter_modal' %>

<% end %>
