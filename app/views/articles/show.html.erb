<div class="page-header">
  <h1><%= @article.title %></h1>
</div>

<%= @article.body %>

<% if user_signed_in? %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                article_path(@article),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>
