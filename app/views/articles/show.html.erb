<%- model_class = Article -%>
<div class="page-header">
  <h1><%= render partial: 'editable/sized_text', locals: { phrase: @article.title_phrase_name } %></h1>
</div>


<h1><%= render partial: 'editable/sized_text', locals: { phrase: @article.body_phrase_name } %></h1>

<% if user_signed_in? %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_article_path(@article), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                article_path(@article),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>
