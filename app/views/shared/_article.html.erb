<div class='row' style='outline: 1px solid black; padding: 15px'>
  <h3><%= article.title %></h3>
  <div class='col-xs-2 text-left'>
    <%= image_tag(article.image_url, class: 'img-responsive center-block', style: 'max-height: 7em') if article.image_url %>
  </div>
  <div class='col-xs-8 text-left'>
    <%= sanitize article.summary %>
    <%= social_share_button_tag(article.title) %>
    <div class="fb-like" data-href="<%= article.source %>"
             data-layout="button_count" data-action="like" data-size="small"
             data-show-faces="true" data-share="true"></div>
  </div>
  <div class='col-xs-2 text-center'>
    <%= link_to article.source, target: '_blank' do %>
      <i class="fa fa-chevron-circle-right fa-5x" aria-hidden="true"></i>
    <% end %>
  </div>
</div>
