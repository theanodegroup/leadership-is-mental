<%- model_class = LeadershipArticle -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @leadership_article.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pub_date) %>:</strong></dt>
  <dd><%= @leadership_article.pub_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source) %>:</strong></dt>
  <dd><%= @leadership_article.source %></dd>
  <dt><strong><%= model_class.human_attribute_name(:guid) %>:</strong></dt>
  <dd><%= @leadership_article.guid %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              leadership_articles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_leadership_article_path(@leadership_article), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              leadership_article_path(@leadership_article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
