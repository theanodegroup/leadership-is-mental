      <%= f.text_field :content, :class => 'form-control' %>
    </div>
    <%=f.error_span(:content) %>
  </div>
  <div class="form-group">
    <%= f.label :pub_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pub_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pub_date) %>
  </div>
  <div class="form-group">
    <%= f.label :summary, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :summary, :class => 'form-control' %>
    </div>
    <%=f.error_span(:summary) %>
  </div>
  <div class="form-group">
    <%= f.label :source, :class => 'control-label col-lg-2' %>
