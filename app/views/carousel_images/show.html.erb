<%- model_class = CarouselImage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:carousel) %>:</strong></dt>
  <dd><%= CarouselImage::CAROUSELS_INVERSE[@carousel_image.carousel] if @carousel_image.carousel.present? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @carousel_image.position_display %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_source_url) %>:</strong></dt>
  <dd><%= @carousel_image.image_source_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_link_url) %>:</strong></dt>
  <dd><%= @carousel_image.image_link_url %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              carousel_images_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_carousel_image_path(@carousel_image), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              carousel_image_path(@carousel_image),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
