<%= form_for @carousel_image, :html => { :class => "form-horizontal carousel_image" } do |f| %>

  <% if @carousel_image.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@carousel_image.errors.count, "error") %> prohibited this carousel_image from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @carousel_image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :carousel, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :carousel, :class => 'form-control' %>
    </div>
    <%=f.error_span(:carousel) %>
  </div>
  <div class="form-group">
    <%= f.label :image_source_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :image_source_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image_source_url) %>
  </div>
  <div class="form-group">
    <%= f.label :image_link_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :image_link_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image_link_url) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                carousel_images_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
