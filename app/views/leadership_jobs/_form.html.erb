<%= form_for @leadership_job, :html => { :class => "form-horizontal leadership_job" } do |f| %>

  <% if @leadership_job.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@leadership_job.errors.count, "error") %> prohibited this leadership_job from being saved:</h3>
      </div>
